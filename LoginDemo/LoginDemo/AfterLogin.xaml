 <Window x:Class="LoginDemo.AfterLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title=""
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized">

    <DockPanel>

        <!-- HEADER -->
        <StackPanel Background="#e62c2c" DockPanel.Dock="Top" Orientation="Horizontal" Height="118">
            <Image Source="Images/logo_dai_hoc_bkhn.png"
                   Height="99" Margin="15,5,10,5" VerticalAlignment="Center"/>

            <StackPanel VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="ĐẠI HỌC BÁCH KHOA HÀ NỘI" FontSize="26" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="HỆ THỐNG QUẢN LÝ SINH VIÊN" FontSize="19" Foreground="White"/>
            </StackPanel>

            <!-- Nút ba chấm thay cho ĐĂNG NHẬP -->
            <Button x:Name="MenuButton"
                    Width="60" Height="40"
                    FontWeight="Bold"
                    FontSize="24"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="500,0,20,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Cursor="Hand">
                <Image Source="/Images/icon-user.png" Stretch="Fill"/>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F05555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C03333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- MENU NGANG -->
        <Menu DockPanel.Dock="Top" Background="Black" Height="34">
            <Menu.Resources>
                <Style x:Key="MainMenuHeaderTextBlock" TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="17"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="0,4"/>
                </Style>
                <Style x:Key="SubMenuItemStyle" TargetType="MenuItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="DarkBlue"/>
                    <Setter Property="Padding" Value="10,4"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D0E7FF"/>
                            <Setter Property="Foreground" Value="Blue"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#D0E7FF"/>
                            <Setter Property="Foreground" Value="Blue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>

            <!-- MENU ITEMS -->
            <MenuItem Margin="20,0,20,0">
                <MenuItem.Header>
                    <TextBlock Text="TRANG CHỦ" Style="{StaticResource MainMenuHeaderTextBlock}"/>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Margin="0,0,20,0">
                <MenuItem.Header>
                    <TextBlock Text="DANH MỤC" Style="{StaticResource MainMenuHeaderTextBlock}"/>
                </MenuItem.Header>
                <MenuItem Header="Thông tin tài khoản" Style="{StaticResource SubMenuItemStyle}"/>
                <MenuItem Header="Đổi mật khẩu" Style="{StaticResource SubMenuItemStyle}"/>
                <MenuItem Header="Ngành học" Style="{StaticResource SubMenuItemStyle}"/>
                <MenuItem Header="Chương trình đào tạo" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>

            <MenuItem Margin="0,0,20,0">
                <MenuItem.Header>
                    <TextBlock Text="XỬ LÝ ĐIỂM" Style="{StaticResource MainMenuHeaderTextBlock}"/>
                </MenuItem.Header>
                <MenuItem Header="Xử lý CPA" Style="{StaticResource SubMenuItemStyle}" Click="HandleCPA_Click"/>
                <MenuItem Header="Xử lý GPA" Style="{StaticResource SubMenuItemStyle}" Click="HandleGPA_Click"/>
                <MenuItem Header="Xử lý điểm tổng kết môn học" Style="{StaticResource SubMenuItemStyle}" Click="HandleFinalGrade_Click"/>
            </MenuItem>

            <MenuItem Margin="0,0,20,0" Click="UpdateScoreMenuItem_Click">
                <MenuItem.Header>
                    <TextBlock Text="CẬP NHẬT ĐIỂM" Style="{StaticResource MainMenuHeaderTextBlock}"/>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Margin="0,0,20,0">
                <MenuItem.Header>
                    <TextBlock Text="THỐNG KÊ" Style="{StaticResource MainMenuHeaderTextBlock}"/>
                </MenuItem.Header>
                <MenuItem Header="Thống kê kết quả học tập" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>

            <MenuItem Margin="0,0,20,0" Click="Help_Click">
                <MenuItem.Header>
                    <TextBlock Text="TRỢ GIÚP" Style="{StaticResource MainMenuHeaderTextBlock}"/>
                </MenuItem.Header>
            </MenuItem>
        </Menu>

        <!-- NỘI DUNG CHÍNH + ẢNH -->
        <Grid x:Name="MainContentArea">
            <Image Source="Images/dither_it_background_man_hinh_chinh.jpg"
                   Stretch="Fill"/>
            <ContentControl x:Name="MainContentControl" />
        </Grid>

    </DockPanel>
</Window>

