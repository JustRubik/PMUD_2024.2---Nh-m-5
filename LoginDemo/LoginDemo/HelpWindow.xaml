<UserControl x:Class="LoginDemo.HelpWindow"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 

             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

             xmlns:local="clr-namespace:LoginDemo"

             mc:Ignorable="d" 

             Height="Auto" Width="Auto">
    <Border Background="#F0F0F0" CornerRadius="10" Padding="0" Width="950" Height="480">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="10,10,10,0" Padding="10" Background="White" CornerRadius="5">
                <TextBlock Text="TRUNG TÂM TRỢ GIÚP &amp; HỖ TRỢ" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333"/>
            </Border>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="White" Margin="0">
                    <StackPanel Margin="15">

                        <GroupBox Header="❓ CÁC CÂU HỎI THƯỜNG GẶP" FontWeight="Bold" FontSize="14">
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <StackPanel>
                                        <TextBlock Text="Làm thế nào để xem lịch thi của tôi?" FontWeight="SemiBold" TextDecorations="Underline" Cursor="Hand" Foreground="Blue"/>
                                        <TextBlock Text="Bạn có thể truy cập mục 'Học tập' -&gt; 'Lịch thi' trên trang chủ hoặc trong ứng dụng di động để xem lịch thi chi tiết." Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <StackPanel>
                                        <TextBlock Text="Quy trình xin cấp lại thẻ sinh viên bị mất?" FontWeight="SemiBold" TextDecorations="Underline" Cursor="Hand" Foreground="Blue"/>
                                        <TextBlock Text="Để cấp lại thẻ, bạn cần điền vào biểu mẫu tại Phòng Công tác Sinh viên, nộp lệ phí và nhận giấy hẹn." Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <StackPanel>
                                        <TextBlock Text="Làm sao để xem điểm từng kì?" FontWeight="SemiBold" TextDecorations="Underline" Cursor="Hand" Foreground="Blue"/>
                                        <TextBlock Text="Bấm vào thư mục." Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <StackPanel>
                                        <TextBlock Text="Làm thế nào để thay đổi thông tin cá nhân?" FontWeight="SemiBold" TextDecorations="Underline" Cursor="Hand" Foreground="Blue"/>
                                        <TextBlock Text="Bạn có thể cập nhật thông tin cá nhân trong phần 'Hồ sơ cá nhân' trên cổng thông tin sinh viên hoặc liên hệ phòng Công tác Sinh viên để được hỗ trợ." Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,10">
                                    <StackPanel>
                                        <TextBlock Text="Thời hạn nộp học phí là khi nào?" FontWeight="SemiBold" TextDecorations="Underline" Cursor="Hand" Foreground="Blue"/>
                                        <TextBlock Text="Thông tin về thời hạn nộp học phí sẽ được thông báo chi tiết trên cổng thông tin của trường và qua email sinh viên vào đầu mỗi học kỳ." Margin="0,5,0,0" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Grid>
    </Border>
</UserControl>
 