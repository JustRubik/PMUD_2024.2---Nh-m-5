<UserControl x:Class="QuanLySVBK.Accounts.ThongTinGiangVienControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700">
    <Grid Margin="20">
        <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="#F02A2A" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="THÔNG TIN GIẢNG VIÊN" FontSize="40" FontWeight="Bold" Foreground="#F02A2A" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nhãn bên trái -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="Họ tên:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Mã giảng viên:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Giới tính:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Ngày sinh:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Quê quán:" Margin="0,5" FontSize="16"/>
                    </StackPanel>

                    <!-- Dữ liệu bên trái -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBlock x:Name="TxtHoTen" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtMaGV" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtGioiTinh" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtNgaySinh" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtQueQuan" Margin="0,5" FontSize="16"/>
                    </StackPanel>

                    <!-- Nhãn bên phải -->
                    <StackPanel Grid.Column="3" Margin="0,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="CCCD:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Số điện thoại:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Mã viện:" Margin="0,5" FontSize="16"/>
                    </StackPanel>

                    <!-- Dữ liệu bên phải -->
                    <StackPanel Grid.Column="4" VerticalAlignment="Top">
                        <TextBlock x:Name="TxtCCCD" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtSDT" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtMaVien" Margin="0,5" FontSize="16"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
