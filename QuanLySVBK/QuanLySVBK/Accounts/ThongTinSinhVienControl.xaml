<UserControl x:Class="QuanLySVBK.Accounts.ThongTinSinhVienControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="700">
    <Grid Margin="20">
        <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="#F02A2A" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="THÔNG TIN SINH VIÊN" FontSize="40" FontWeight="Bold" Foreground="#F02A2A" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cột trái -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="Họ tên:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Mã sinh viên:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Giới tính:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Ngày sinh:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Quê quán:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="CCCD:" Margin="0,5" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <TextBlock x:Name="TxtHoTen" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtMaSV" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtGioiTinh" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtNgaySinh" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtQueQuan" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtCCCD" Margin="0,5" FontSize="16"/>
                    </StackPanel>

                    <!-- Cột phải -->
                    <StackPanel Grid.Column="2" Margin="30,0,10,0" VerticalAlignment="Top">
                        <TextBlock Text="Số điện thoại:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="Mã ngành:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="GPA:" Margin="0,5" FontSize="16"/>
                        <TextBlock Text="CPA:" Margin="0,5" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" VerticalAlignment="Top">
                        <TextBlock x:Name="TxtSDT" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtMaNganh" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtGPA" Margin="0,5" FontSize="16"/>
                        <TextBlock x:Name="TxtCPA" Margin="0,5" FontSize="16"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
